<h1>Register</h1>
<form action="<%= register_path %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>First Name</p>
  <input type="text" id="fname"name="user[fname]">
  <p>Last Name</p>
  <input type="text" id="lname"name="user[lname]">
  <p>Email</p>
  <input type="email" id="email"name="user[email]">
  <p>Password</p>
  <input type="password" id="password"name="user[password]">
  <p>Password Confirmation</p>
  <input type="password" id="password_confirmation"name="user[password_confirmation]">
  <p>Location</p>
  <input type="text" id="location"name="user[location]">
  <p>State</p>
  <select name="user[state]">
    <option value="AZ">Arizona</option>
    <option value="NV">Nevada</option>
    <option value="WA">Washington</option>
    <option value="NY">New York</option>
    <option value="TX">Texas</option>
    <option value="CA">California</option>
    <option value="MI">Michigan</option>
  </select>
  <button type="submit" name="button">Register</button>
</form>

<hr>

<h1>Login</h1>
<form action="<%= login_path %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Email</p>
  <input type="email" name = "email">
  <p>Password</p>
  <input type="password" name = "password">
  <button type="submit" name="login">Login</button>
</form>
