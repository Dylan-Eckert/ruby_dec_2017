<h1>Edit <%= @event.name %></h1>
<form action="<%= update_event_path @event.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <p>Name</p>
  <input type="text" name="event[name]"value="<%= @event.name %>">
  <p>Date</p>
  <input type="date" name="event[date]"value="<%= @event.date %>">
  <p>Location</p>
  <input type="text" id="location" name="event[location]"value="<%= @event.location %>">
  <p>State</p>
  <select name="event[state]">
    <option value="AZ">Arizona</option>
    <option value="NV">Nevada</option>
    <option value="WA">Washington</option>
    <option value="NY">New York</option>
    <option value="TX">Texas</option>
    <option value="CA">California</option>
    <option value="MI">Michigan</option>
  </select>
  <button type="submit" name="update">Update Event</button>
</form>
