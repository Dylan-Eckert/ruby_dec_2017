<form action="<%= update_user_path @user.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <p>First Name</p>
  <input type="text" id="fname"name="user[fname]" value="<%= @user.fname %>">
  <p>Last Name</p>
  <input type="text" id="lname"name="user[lname]" value="<%= @user.lname %>">
  <p>Email</p>
  <input type="email" id="email"name="user[email]" value="<%= @user.email %>">
  <p>Location</p>
  <input type="text" id="location"name="user[location]" value="<%= @user.location %>">
  <p>State</p>
  <select name="user[state]">
    <option value="AZ">Arizona</option>
    <option value="NV">Nevada</option>
    <option value="WA">Washington</option>
    <option value="NY">New York</option>
    <option value="TX">Texas</option>
    <option value="CA">California</option>
    <option value="MI">Michigan</option>
  </select>
  <button type="submit" name="button">Update Account</button>
</form>

<a href="<%= destroy_user_path current_user.id %>" data-method="delete">Delete Account</a>
