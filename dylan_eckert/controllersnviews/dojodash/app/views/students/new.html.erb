<h1>New Student for Dojo <%= @dojo.id %></h1>
<% if flash[:errors] %>
  <div id="errors">
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
  </div>
<% end %>

<form action="<%= create_student_path  @dojo.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <span>First Name:</span>
  <input type="text" name="student[fname]">
  <span>Last name:</span>
  <input type="text" name="student[lname]">
  <span>Email:</span>
  <input type="text" name="student[email]">
  <button type="submit" name="submit">Submit</button>
</form>

<a href="<%= students_path @dojo.id %>">Go Back</a>
