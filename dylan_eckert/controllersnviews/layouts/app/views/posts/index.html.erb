<% content_for :posts do %>
<h1>All Posts</h1>
  <table>
    <thead>
      <tr>
        <td>Title</td>
        <td>Content</td>
        <td>Author</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.user.fname %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% content_for :postform do %>
<h1>New Post</h1>
  <form action="/posts" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>Title</p>
    <input type="text" name="post[title]" value="">
    <p>Content</p>
    <input type="text" name="post[content]" value="">
    <p>Author</p>
    <select name="post[user_id]">
      <% @users.each do |user| %>
        <option value="<%= user.id %>"><%= user.fname %></option>
      <% end %>
    </select>
    <input type="submit" name="submit" value="Submit">
  </form>
<% end %>
<% content_for :postnav do %>
  <h1>Go to Users Page</h1>
  <a href="/users">All Users</a>
<% end %>
