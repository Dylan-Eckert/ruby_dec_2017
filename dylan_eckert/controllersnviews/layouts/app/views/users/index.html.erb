<% content_for :users do %>
<h1>All Users</h1>
  <table>
    <thead>
      <tr>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Favourite Language</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.fname %></td>
          <td><%= user.lname %></td>
          <td><%= user.language %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :userform do %>
<h1>New User</h1>
  <form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>First Name</p>
    <input type="text" name="user[fname]" value="">
    <p>Last Name</p>
    <input type="text" name="user[lname]" value="">
    <p>Favourite Language</p>
    <input type="text" name="user[language]" value="">
    <input type="submit" name="submit" value="Submit">
  </form>
  <a href="/posts">All posts</a>
<% end %>
